{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "removeComments": true,
    "jsx": "preserve",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "suppressExcessPropertyErrors": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
